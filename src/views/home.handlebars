<h1>Bienvenido {{name}}</h1>

<div class="container">
 
{{#each products}}

    <div class="products">
        <h2 class="linea"> {{this.title}}</h2>
        <p>Description: {{this.description}}</p>
        <p>Precio: {{this.price}}</p>
        <p>Code: {{this.code}}</p>
        <p>Category: {{this.category}}</p>
       <img src="/img/{{this.thumbnail}}" alt="{{this.description}}">
       <br>
        <button class="success" type="submit" data-productid="{{this._id}}" >Agregar al carrito</button>
    </div>
    
{{/each}}

</div>
<div>
            {{#if hasPrevPage}}
                <a href="{{this.prevLink}}"><< Anterior</a>
            {{/if}}
        </div>
        <br>
        <div>
            {{#if hasNextPage}}
                <a href="{{this.nextLink}}">Siguiente >></a>
            {{/if}}
</div>